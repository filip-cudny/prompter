# Prompt Store Configuration Example
# Copy this file to .env and fill in your actual values

# Required settings
API_KEY=your_api_key_here
BASE_URL=https://your-api-server.com

# Optional settings for speech-to-text functionality
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Hotkey configuration (optional)
HOTKEY=ctrl+f1

# Application settings (optional)
MAX_HISTORY_ENTRIES=10
ENABLE_NOTIFICATIONS=true
DEBUG_MODE=false

# Menu positioning (optional)
# Format: x_offset,y_offset
MENU_POSITION_OFFSET=0,0

# Auto-refresh settings (optional)
AUTO_REFRESH_INTERVAL=300

# Clipboard timeout in seconds (optional)
CLIPBOARD_TIMEOUT=5.0
